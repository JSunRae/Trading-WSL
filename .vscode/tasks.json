{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/pip",
      "args": ["install", "-e", ".[dev]"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\pip.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "pytest", "tests/"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests with Coverage",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "-m",
        "pytest",
        "tests/",
        "--cov=src",
        "--cov-report=term-missing",
        "--cov-report=json:coverage.json"
      ],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": ["Generate Unused Code Report"]
    },
    {
      "label": "Generate Unused Code Report",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["scripts/find_unused_code.py"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint with Ruff",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "ruff", "check", "src/", "tests/", "examples/"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Coverage and Report (Windows)",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe -m pytest --cov=src --cov-branch --cov-report=json:coverage.json && ${workspaceFolder}\\.venv\\Scripts\\python.exe scripts\\find_unused_code.py",
      "problemMatcher": []
    },
    {
      "label": "Format with Ruff",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "ruff", "format", "src/", "tests/", "examples/"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Type Check with mypy",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "mypy", "src/"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Trading Main",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["src/ib_Main.py"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Automated Trading",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["src/tools/run_trading_fully_automated.py", "--symbols", "AAPL"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Setup Automated Trading",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["src/tools/setup/setup_automated_trading.py"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Setup IB Gateway",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["src/tools/setup/setup_ib_gateway.py"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "inventory:scripts",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["src/tools/analysis/script_inventory_analyzer.py"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "analyze:scripts",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["src/tools/analysis/analyze_scripts.py"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "system:check",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["src/tools/analysis/system_check_analysis.py"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "validate:ml",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["src/tools/analysis/validate_ml_structure.py"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "describe:all",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "set -e; PY=\"${workspaceFolder}/.venv/bin/python\"; echo 'Testing all tools with --describe...'; for tool in 'src/tools/run_trading_fully_automated.py' 'src/tools/analyze_depth.py' 'src/tools/record_depth.py' 'src/tools/quick_start.py' 'src/tools/analysis/analyze_scripts.py' 'src/tools/analysis/system_check_analysis.py' 'src/tools/analysis/validate_ml_structure.py' 'src/tools/analysis/script_inventory_analyzer.py' 'src/tools/setup/setup_automated_trading.py' 'src/tools/setup/setup_ib_gateway.py' 'src/tools/setup/fix_hardcoded_paths.py'; do echo \"Testing $tool --describe...\"; output=$($PY \"$tool\" --describe 2>&1) || { echo \"Error: $tool --describe failed\"; exit 1; }; echo \"$output\" | $PY -m json.tool > /dev/null || { echo \"Error: $tool --describe returned invalid JSON\"; exit 1; }; echo \"✅ $tool --describe OK\"; done; echo 'All tools --describe validation completed successfully!'"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "lint:extended",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "ruff", "check", "src/", "tests/", "examples/"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "format:extended",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "ruff", "format", "src/", "tests/", "examples/"],
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "typecheck:extended",
      "type": "shell",
      "command": "npx",
      "args": ["pyright", "src/", "tests/", "examples/"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "nightly:l2_backfill",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "src/tools/backfill_l2_from_warrior.py",
        "--since",
        "3",
        "--max-tasks",
        "500",
        "--strict"
      ],
      "options": {
        "env": {
          "LOG_LEVEL": "INFO"
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Warrior L2: Dry-Run Backfill",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "src/tools/auto_backfill_from_warrior.py",
        "--since",
        "3",
        "--dry-run"
      ],
      "problemMatcher": []
    },
    {
      "label": "Warrior L2: Run Backfill (strict)",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "src/tools/auto_backfill_from_warrior.py",
        "--since",
        "3",
        "--strict",
        "--max-workers",
        "4"
      ],
      "problemMatcher": []
    },
    {
      "label": "Notify TBS (finished)",
      "type": "shell",
      "command": "./scripts/notify_tbs.sh",
      "args": [
        "${workspaceFolderBasename}",
        "${input:runId}",
        "${input:usedPrompt}"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "windows": {
        "command": "wsl",
        "args": [
          "bash",
          "-lc",
          "./scripts/notify_tbs.sh \"${workspaceFolderBasename}\" \"${input:runId}\" \"${input:usedPrompt}\""
        ],
        "options": { "cwd": "${workspaceFolder}" }
      }
    },
    {
      "label": "Run Tests → Notify",
      "dependsOrder": "sequence",
      "dependsOn": ["Run Tests", "Notify TBS (finished)"]
    }
  ],
  "inputs": [
    {
      "id": "runId",
      "type": "promptString",
      "description": "Run ID",
      "default": "run-${currentTime}"
    },
    {
      "id": "usedPrompt",
      "type": "promptString",
      "description": "Paste the prompt the agent executed"
    }
  ]
}
