{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://trading/jschemas/export-manifest.v1.json",
  "title": "TF_1 Export Manifest (v1)",
  "type": "object",
  "required": ["schema_version", "model", "artifacts"],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["1.0"]
    },
    "model": {
      "type": "object",
      "required": ["id", "version"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "metadata": {
          "type": "object",
          "properties": {
            "production": {
              "type": "object",
              "properties": { "alias": { "type": "string", "minLength": 1 } },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "path"],
        "properties": {
          "type": { "type": "string" },
          "path": { "type": "string" },
          "schema": {
            "type": "object",
            "properties": { "version": { "type": "string" } },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "sharpe": { "type": ["number", "string"] },
        "f1": { "type": ["number", "string"] },
        "max_drawdown": { "type": ["number", "string"] }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
